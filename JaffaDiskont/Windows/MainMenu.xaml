<Window x:Class="JaffaDiskont.Windows.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JaffaDiskont.Windows"
        mc:Ignorable="d"
        Title="MainMenu"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize">

    <Grid Background="#DFA96B">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#F7C17F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/res/logoBez.png" Width="110" Height="110" Margin="20,0,0,0" VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
                       Text="Jaffa - Main Menu"
                       FontSize="34"
                       FontWeight="Bold"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,10,0">
                    <Image Source="/res/minimize.png" Width="20" Height="20" Cursor="Hand" Margin="0,0,10,0" />
                    <Image Source="/res/closeBlack.png" Width="20" Height="20" Cursor="Hand" Margin="0,0,10,0" MouseLeftButtonDown="Ugasi"/>
                </StackPanel>

                <Button Grid.Row="1"
                        Background="#FFA500"
                        Foreground="White"
                        Padding="10,5"
                        Margin="0,16,68,0"  
                    HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/res/profile.png" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Korisnik"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,30,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Background="#F7D7BD" Width="180" Height="200" Margin="20" Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Magacin GP" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <Image Source="/res/shelves.png" Width="80" Height="80" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Background="#FFA500" Width="180" Height="200" Margin="20" Cursor="Hand" Click="StanjeZaliha">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Stanje zaliha" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <Image Source="/res/storage.png" Width="80" Height="80" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" Background="#D3C0AE" Width="180" Height="200" Margin="20" Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Prodaja" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <Image Source="/res/cash-register.png" Width="80" Height="80" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Background="#0696A2" Width="180" Height="200" Margin="30,10,20,10" Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Mail" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <Image Source="/res/email.png" Width="64" Height="64" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Background="#CC7642" Width="180" Height="200" Margin="20,10,30,10" Cursor="Hand">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Promet" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <Image Source="/res/report.png" Width="80" Height="80" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
