<Window x:Class="JaffaDiskont.Windows.NaplatiRacun"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Naplati račun"
        Height="600" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAC073">

    <Window.Resources>
        <Style x:Key="CapsuleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#002855"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CenteredTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="CenteredComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F7B966" Height="140">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <Image Source="/res/logoBez.png" Width="80" Height="80"/>
                <TextBlock Text="Naplati račun"
                           VerticalAlignment="Center"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#002855"
                           Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="40,20,40,20" VerticalAlignment="Top">

            <Border CornerRadius="5" Background="White" Height="50" Margin="0,20">
                <TextBlock Text="2025" FontSize="24" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <ComboBox Text="Metod placanja" Style="{StaticResource CenteredComboBoxStyle}">
                <ComboBoxItem Content="Gotovina"/>
                <ComboBoxItem Content="Kartica"/>
            </ComboBox>

            <TextBox Style="{StaticResource CenteredTextBoxStyle}" Text="Uplaćeno novca"/>
            <TextBox Style="{StaticResource CenteredTextBoxStyle}" Text="Kusur"/>
            <TextBox Style="{StaticResource CenteredTextBoxStyle}" Text="Broj kartice"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button Style="{StaticResource CapsuleButtonStyle}" Width="130" Height="50" Margin="10,0,10,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/res/clear.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Otkaži" FontWeight="Bold" Foreground="#F7C1A4"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource CapsuleButtonStyle}" Width="130" Height="50" Margin="10,0,10,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/res/check.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Naplati" FontWeight="Bold" Foreground="#F7C1A4"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
