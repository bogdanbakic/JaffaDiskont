<Window x:Class="JaffaDiskont.Windows.Prodaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="800"
        Background="#f7b966"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        
        <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CenteredTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,6,5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>

        <Style x:Key="CapsuleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F7C1A4"/>
            <Setter Property="Foreground" Value="#002855"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="25"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125*" />
            <RowDefinition Height="313*" />
            <RowDefinition Height="146*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10" Background="#ffbc80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="133" />
                <ColumnDefinition Width="323*" />
                <ColumnDefinition Width="181*" />
                <ColumnDefinition Width="Auto" MinWidth="163.204" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/res/logoBez.png" Margin="8,10,10,5" Height="100"  />

            <TextBox Grid.Column="1"
                     Height="40"
                     Margin="10,43,121,0"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Padding="5,6,5,0"
                     Foreground="Gray"
                     GotFocus="SearchTextBox_GotFocus"
                     LostFocus="SearchTextBox_LostFocus" 
                     Style="{StaticResource CenteredTextBoxStyle}"
                    Text="Bar kod / Naziv artikla"/>

            <TextBox Grid.Column="2"
                     Height="40"
                     Width="100"
                     Margin="40,43,41,0"
                     VerticalAlignment="Top"
                     FontSize="14"
                     Foreground="Gray"
                     GotFocus="QuantityTextBox_GotFocus"
                     LostFocus="QuantityTextBox_LostFocus" 
                     Style="{StaticResource CenteredTextBoxStyle}"
                     Text="Količina"/>

            <Grid Grid.Column="3">
                <Button Style="{StaticResource CapsuleButtonStyle}"
            Margin="21,43,42,32"
            Height="40" Width="100"
            Background="#013876"
            VerticalAlignment="Top"
            HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="+" Foreground="#f9a535" VerticalAlignment="Center" FontSize="24" Margin="0,-5,0,0"/>
                        <TextBlock Text="Dodaj" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="#f9a535"/>
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0">
                    <Button Background="Transparent" BorderThickness="0" Padding="0" Click="MinimizeButton_Click">
                        <Image Source="/res/minimize.png" Width="20" Height="20"/>
                    </Button>

                    <Button Background="Transparent" BorderThickness="0" Padding="0" Click="CloseButton_Click" Margin="5,0,0,0">
                        <Image Source="/res/closeBlack.png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>

        <DataGrid Grid.Row="1"
                  Margin="20,2,20,10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="35"
                  RowHeight="30" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bar kod" Binding="{Binding Cena}" Width="*"
                    HeaderStyle="{StaticResource CenterHeaderStyle}"
                    ElementStyle="{StaticResource CenterCellStyle}" />

                <DataGridTextColumn Header="Ime proizvoda" Binding="{Binding Cena}" Width="*"
                    HeaderStyle="{StaticResource CenterHeaderStyle}"
                    ElementStyle="{StaticResource CenterCellStyle}" />

                <DataGridTextColumn Header="Gramaža" Binding="{Binding Cena}" Width="*"
                    HeaderStyle="{StaticResource CenterHeaderStyle}"
                    ElementStyle="{StaticResource CenterCellStyle}" />

                <DataGridTextColumn Header="Cena" Binding="{Binding Cena}" Width="*"
                    HeaderStyle="{StaticResource CenterHeaderStyle}"
                    ElementStyle="{StaticResource CenterCellStyle}" />

                <DataGridTextColumn Header="količina" Binding="{Binding Cena}" Width="*"
                    HeaderStyle="{StaticResource CenterHeaderStyle}"
                    ElementStyle="{StaticResource CenterCellStyle}" />

            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                       Text="Jaffa - Prodaja"
                       FontSize="40"
                       FontWeight="Bold"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center" Margin="0,39,0,0"/>

            <Button Grid.Column="1" Style="{StaticResource CapsuleButtonStyle}" Width="130" Height="50" Background="#013876" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="x" Foreground="#f9a535" VerticalAlignment="Center" FontSize="24" Margin="0,-5,0,0"/>
                    <TextBlock Text="Otkaži" VerticalAlignment="Center" FontWeight="DemiBold" Margin="10,0,0,0" Foreground="#f9a535"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" Style="{StaticResource CapsuleButtonStyle}" Width="130" Height="50" Background="#013876" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="✓ " Foreground="#f9a535" VerticalAlignment="Center" FontSize="24" Margin="0,-5,0,0"/>
                    <TextBlock Text="Naplati" VerticalAlignment="Center" FontWeight="DemiBold" Margin="10,0,0,0" Foreground="#f9a535"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
